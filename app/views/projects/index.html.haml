%table.projects
  %tr
    %th= t('activerecord.attributes.project.name')
    %th= t('activerecord.attributes.project.description')
    %th
    %th
    %th
  - @projects.each do |project|
    %tr
      %td= project.name
      %td= project.description
      %td= link_to(t('show'), project) if can? :see, project
      %td= link_to(t('edit'), edit_project_path(project)) if can? :edit, project
      %td= link_to(t('delete'), project, :method => :delete, :confirm => t('project_delete_confirmation')) if can? :delete, project
.menu
  =link_to(t('create_new_project'), new_project_path)

