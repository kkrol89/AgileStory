- if @chat.present? || @chats.present?
  %span.connector >
  %span= link_to 'Chats', project_chats_path(@project)
  - if @chat.present?
    - if @chat.new_record?
      %span.connector >
      %span= link_to 'New chat', new_project_chat_path(@project)
    - else
      %span.connector >
      %span= link_to @chat.title, project_chat_path(@project, @chat)